<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Сообщение о пустом списке -->
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="Список пуст. Добавьте блюдо!"
        android:textSize="18sp"
        android:visibility="gone" />

    <!-- Кнопка для добавления блюда (наверху) -->
    <Button
        android:id="@+id/add_dish_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Добавить блюдо"
        android:visibility="gone" />

    <!-- Список блюд -->
    <ListView
        android:id="@+id/dish_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Кнопка для добавления блюда (внизу) -->
    <Button
        android:id="@+id/add_dish_button_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Добавить блюдо" />
</LinearLayout>